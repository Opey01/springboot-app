# Dockerfilejenkins
FROM amazoncorretto:8-alpine-jre

# run as non-root
RUN addgroup -S app && adduser -S app -G app
WORKDIR /app
USER app

# JAR comes from root/target after Maven build
COPY target/*.jar app.jar

EXPOSE 8080
ENV JAVA_OPTS=""
ENTRYPOINT ["sh","-c","java $JAVA_OPTS -jar /app/app.jar"]


