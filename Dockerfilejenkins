# Dockerfilejenkins (replace the whole file)
FROM amazoncorretto:8-alpine-jre

# Run as non-root
RUN addgroup -S app && adduser -S app -G app
WORKDIR /app
USER app

# Copy the Spring Boot fat jar built by Maven (root/target/*.jar)
COPY target/*.jar app.jar

EXPOSE 8080
ENV JAVA_OPTS=""
ENTRYPOINT ["sh","-c","java $JAVA_OPTS -jar /app/app.jar"]

